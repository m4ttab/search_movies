<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Director:</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @films.each do |film| %>
      <tr>
        <td><%= link_to film.title, film %></td>  
          <% film.directors.each do |director| %>
            <td> <%= director.name %> </td>
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Film', new_film_path, class: "btn btn-default" %>

