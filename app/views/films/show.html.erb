<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @film.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @film.description %>
</p>

<p>
  <strong>Director:</strong>
  	<% @film.directors.each do |director| %>
  		<p><%= link_to director.name, director_path(director) %></p>
  	<% end %>
</p>

<p>
  <strong>Cast:</strong>
  <% @film.actors.each do |actor| %>
  	<ul>
  		<li><%= link_to actor.name, actor_path(actor) %></li>
  	</ul>
  <% end %>
</p>

<%= render partial: "comments/form", locals: {commentable: @film} %>

<%= render partial: "comments/comments", locals: {commentable: @film} %>

<%= link_to 'Edit', edit_film_path(@film) %> |
<%= link_to 'Back', films_path %>
