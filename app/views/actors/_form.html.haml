= form_for(actor, html: {class: 'form-horizontal'}) do |f|
  - if actor.errors.any?
    #error_explanation
      %h2= pluralize(actor.errors.count, "error") 
      prohibited this actor from being saved:

      %ul
      - actor.errors.full_messages.each do |message|
        %li= message


  .form-group
    = f.label :name, class: "col-sm-3 control-label"
    .col-sm-6
      = f.text_field :name, class: "form-control"

  .form-group
    = f.label :description, class: "col-sm-3 control-label"
    .col-sm-6
      = f.text_area :description, class: "form-control"
  

  .form-group
    = f.label :date_of_birth, class: "col-sm-3 control-label"
    .col-sm-6
      = f.date_select :date_of_birth, class: "form-control"


  .form-group
    = f.label :place_of_birth, class: "col-sm-3 control-label"
    .col-sm-6
      = f.text_field :place_of_birth, class: "form-control"
  

  .form-group
    = f.label :film_id, class: "col-sm-3 control-label"
    .col-sm-6
      = f.select :film_id, Film.all.map {|p| [p,p.id]}
  

  .form-group
    = f.submit "Create", class: "btn btn-default"

